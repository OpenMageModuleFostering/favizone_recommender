<!-- The root node for Magento module configuration -->
<config>
    <!--
        The module's node contains basic
        information about each Magento module
    -->
    <modules>
        <!--
            This must exactly match the namespace and module's folder
            names, with directory separators replaced by underscores
        -->
        <Favizone_Recommender>
            <version>1.0.7</version>
        </Favizone_Recommender>
    </modules>
    <global>
        <resources>
            <favizone_recommender_setup>
                <setup>
                    <module>Favizone_Recommender</module>
                    <class>Favizone_Recommender_Model_Resource_Setup</class>
                </setup>
            </favizone_recommender_setup>
        </resources>
        <blocks>
            <favizone_recommender>
                <class>Favizone_Recommender_Block</class>
            </favizone_recommender>
        </blocks>
        <helpers>
            <favizone_recommender>
                <class>Favizone_Recommender_Helper</class>
            </favizone_recommender>
        </helpers>
        <models>
            <favizone_recommender>
                <class>Favizone_Recommender_Model</class>
                <resourceModel>favizone_recommender_resource</resourceModel>
            </favizone_recommender>
            <favizone_recommender_resource>
                <class>Favizone_Recommender_Model_Resource</class>
                <entities>
                    <accessKey>
                        <table>favizone_recommender_access_key</table>
                    </accessKey>
                </entities>
            </favizone_recommender_resource>
        </models>
        <events>
            <catalog_product_save_after>
                <observers>
                    <favizone_recommender_catalog_product_save_after>
                        <type>singleton</type>
                        <class>Favizone_Recommender_Model_Observer</class>
                        <method>sendUpdateProduct</method>
                    </favizone_recommender_catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <catalog_product_delete_after>
                <observers>
                    <favizone_recommender_catalog_product_delete_after>
                        <type>singleton</type>
                        <class>Favizone_Recommender_Model_Observer</class>
                        <method>sendDeleteProduct</method>
                    </favizone_recommender_catalog_product_delete_after>
                </observers>
            </catalog_product_delete_after>
            <catalog_category_save_commit_after>
                <observers>
                    <favizone_recommender_catalog_category_save_commit_after>
                        <type>singleton</type>
                        <class>Favizone_Recommender_Model_Observer</class>
                        <method>sendUpdateCategory</method>
                    </favizone_recommender_catalog_category_save_commit_after>
                </observers>
            </catalog_category_save_commit_after>
            <catalog_category_delete_commit_after>
                <observers>
                    <favizone_recommender_catalog_category_delete_commit_after>
                        <type>singleton</type>
                        <class>Favizone_Recommender_Model_Observer</class>
                        <method>sendDeleteCategory</method>
                    </favizone_recommender_catalog_category_delete_commit_after>
                </observers>
            </catalog_category_delete_commit_after>
            <customer_login>
                <observers>
                    <favizone_recommender_customer_login>
                        <type>singleton</type>
                        <class>Favizone_Recommender_Model_Observer</class>
                        <method>sendCustomerData</method>
                    </favizone_recommender_customer_login>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <favizone_recommender_customer_logout>
                        <type>singleton</type>
                        <class>Favizone_Recommender_Model_Observer</class>
                        <method>resetData</method>
                    </favizone_recommender_customer_logout>
                </observers>
            </customer_logout>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <favizone_recommender>
                    <file>favizonerecommender.xml</file>
                </favizone_recommender>
            </updates>
        </layout>
        <translate>
            <modules>
                <Favizone_Recommender>
                    <files>
                        <default>Favizone_Recommender.csv</default>
                    </files>
                </Favizone_Recommender>
            </modules>
        </translate>
        <events>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <favizone_recommender after="Mage_Adminhtml">Favizone_Recommender_Adminhtml</favizone_recommender>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
     <frontend>
         <translate>
             <modules>
                 <Favizone_Recommender>
                     <files>
                         <default>Favizone_Recommender.csv</default>
                     </files>
                 </Favizone_Recommender>
             </modules>
         </translate>
         <events>
             <controller_action_layout_load_before>
                 <observers>
                     <favizone_recommender_controller_action_layout_load_before>
                         <type>singleton</type>
                         <class>Favizone_Recommender_Model_Observer</class>
                         <method>generateSessionIdentifier</method>
                     </favizone_recommender_controller_action_layout_load_before>
                 </observers>
             </controller_action_layout_load_before>
             <checkout_cart_product_add_after>
                 <observers>
                     <favizone_recommender_checkout_cart_product_add_after>
                         <type>singleton</type>
                         <class>Favizone_Recommender_Model_Observer</class>
                         <method>sendAddToCartEvent</method>
                     </favizone_recommender_checkout_cart_product_add_after>
                 </observers>
             </checkout_cart_product_add_after>
             <sales_order_place_after>
                 <observers>
                     <favizone_recommender_sales_order_place_after>
                         <type>singleton</type>
                         <class>Favizone_Recommender_Model_Observer</class>
                         <method>sendConfirmOrderEvent</method>
                     </favizone_recommender_sales_order_place_after>
                 </observers>
             </sales_order_place_after>
         </events>
         <layout>
             <updates>
                 <favizone_recommender>
                     <file>favizonerecommender.xml</file>
                 </favizone_recommender>
             </updates>
         </layout>
        <routers>
            <favizone>
                <use>standard</use>
                <args>
                    <module>Favizone_Recommender</module>
                    <frontName>favizone</frontName>
                </args>
            </favizone>
        </routers>
    </frontend>
</config>